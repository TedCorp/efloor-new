<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- <if test="@org.apache.commons.lang.StringUtils@isNotBlank(PD_NAME)"> -->

<mapper namespace="mall.web.mapper.admin.EventMgrMapper">
	<sql id="searchCondition">
		<where>	
			<if test="SUPR_ID != null and SUPR_ID != ''">
			    AND SUPR_ID = #{SUPR_ID}
			</if>
			<if test="schGbn != null and schGbn != ''">
				<if test='schGbn == "PD_NAME"'>
					<choose>
						<when test="schTxt_befList != null">
							<foreach collection="schTxt_bef" item="item" index="index" separator="" open="" close="">
					            AND PD_NAME LIKE '%' || #{item} || '%'
					        </foreach>
						</when>
					</choose>
				</if>	
				<if test='schGbn == "PD_CODE"'>
					<choose>
						<when test="schTxt_befList != null">
							<foreach collection="schTxt_befList" item="item" index="index" separator="" open="" close="">
					            AND PD_CODE LIKE '%' || #{item} || '%'
					        </foreach>
						</when>
					</choose>
				</if>
				<if test='schGbn == "PD_BARCD"'>
					<choose>
						<when test="schTxt_befList != null">
							<foreach collection="schTxt_befList" item="item" index="index" separator="" open="" close="">
					            AND PD_BARCD LIKE '%' || #{item} || '%'
					        </foreach>
						</when>
					</choose>
				</if>
			</if>
			<if test="ONDY_GUBN!= null and ONDY_GUBN!= ''">
				AND ONDY_GUBN = #{ONDY_GUBN}
			</if>
			<if test="SALE_CON!= null and SALE_CON!= ''">
				AND SALE_CON = #{SALE_CON}
			</if>
		</where>  
	</sql>
	
	<!-- 기획전리스트 -->
	<select id="list" parameterType="mall.web.domain.TB_EVENT_MAIN" resultType="mall.web.domain.TB_EVENT_MAIN">
	    SELECT    A.GRP_CD
				, A.GRP_NM
				, A.USE_YN
				, A.REG_DTM
				, A.REGP_ID
				, A.MOD_DTM
				, A.MODP_ID
				, A.ATFL_ID 
				, A.START_DT
				, A.END_DT
				, A.RPIMG_SEQ 
				, A.ATFL_ID_D
				, A.D_USE_YN	
			 	, B.STFL_PATH
                , B.STFL_NAME
                , B.FILEPATH_FLAG  
		  FROM POLARBEAR.TB_EVENT_MAIN A
		  LEFT JOIN POLARBEAR.TB_COATFLXD B 
			ON A.ATFL_ID =B.ATFL_ID
			AND A.RPIMG_SEQ = B.ATFL_SEQ 
	    ORDER BY A.START_DT DESC
	</select>	
	
	<!-- 기획전리스트 메인노출용 -->
	<select id="list_main" parameterType="mall.web.domain.TB_EVENT_MAIN" resultType="mall.web.domain.TB_EVENT_MAIN">
	    SELECT    A.GRP_CD
				, A.GRP_NM
				, A.USE_YN
				, A.REG_DTM
				, A.REGP_ID
				, A.MOD_DTM
				, A.MODP_ID
				, A.ATFL_ID 
				, A.START_DT
				, A.END_DT
				, A.RPIMG_SEQ 
				, A.ATFL_ID_D
				, A.D_USE_YN	
			 	, B.STFL_PATH
                , B.STFL_NAME
                , B.FILEPATH_FLAG  
		  FROM TB_EVENT_MAIN A
		  LEFT JOIN TB_COATFLXD B 
			ON A.ATFL_ID =B.ATFL_ID
			AND A.RPIMG_SEQ = B.ATFL_SEQ WHERE A.USE_YN = 'Y'
	    ORDER BY A.START_DT DESC
	</select>	
	
	

	
	<!-- 기획전상세정보 -->
	<select id="find" parameterType="mall.web.domain.TB_EVENT_MAIN" resultType="mall.web.domain.TB_EVENT_MAIN">
			 SELECT	A.GRP_CD
				, A.GRP_NM
				, A.USE_YN
				, A.REG_DTM
				, A.REGP_ID
				, A.MOD_DTM
				, A.MODP_ID
				, A.START_DT
				, A.END_DT
				, A.RPIMG_SEQ 
				, A.ATFL_ID 
				, A.ATFL_ID_D 
				, B.STFL_PATH
				, B.STFL_NAME
				, B.FILEPATH_FLAG
				, B.DEL_YN 
		  FROM POLARBEAR.TB_EVENT_MAIN A
		  LEFT JOIN POLARBEAR.TB_COATFLXD B
		  	ON A.ATFL_ID = B.ATFL_ID AND A.RPIMG_SEQ = B.ATFL_SEQ
		  WHERE A.GRP_CD = #{GRP_CD}
	</select>
	
	<!-- 기획전등록 -->
	<insert id="insert" parameterType="mall.web.domain.TB_EVENT_MAIN">
		INSERT INTO 
			POLARBEAR.TB_EVENT_MAIN (
				  GRP_CD
				, GRP_NM
				, USE_YN
				, REG_DTM
				, REGP_ID
				, MOD_DTM
				, MODP_ID
				, ATFL_ID
				, START_DT
				, END_DT
				, RPIMG_SEQ 
				, ATFL_ID_D
				, D_USE_YN
			) VALUES (
				 #{GRP_CD}
				, #{GRP_NM}
				, #{USE_YN}
				, SYSDATE
				, #{REGP_ID}
				, SYSDATE
				, #{MODP_ID}
				, #{ATFL_ID}
				, #{START_DT}
				, #{END_DT}
				, 1
				, #{ATFL_ID_D}
				, #{D_USE_YN}
			)
	</insert>
	
	<!-- 기획전수정 -->
	<update id="update" parameterType="mall.web.domain.TB_EVENT_MAIN">
		UPDATE 
			POLARBEAR.TB_EVENT_MAIN
		SET
			  MODP_ID = #{MODP_ID}
			, MOD_DTM = SYSDATE
			, GRP_NM = #{GRP_NM}        
			, USE_YN = #{USE_YN}   
			, ATFL_ID = #{ATFL_ID}   
			, START_DT = #{START_DT}
			, END_DT =#{START_DT}
			, RPIMG_SEQ = #{RPIMG_SEQ}   
			, ATFL_ID_D = #{ATFL_ID_D} 
			, D_USE_YN  = #{D_USE_YN}
		WHERE
			GRP_CD = #{GRP_CD}
	</update>
	
	
	<!-- 기획전삭제 -->
	<update id="delete" parameterType="mall.web.domain.TB_EVENT_MAIN">
		DELETE
		FROM POLARBEAR.TB_EVENT_MAIN
		WHERE GRP_CD = #{GRP_CD}
	</update>
	
	<!-- 기획전[상품]등록 -->
	<insert id="updateProduct" parameterType="mall.web.domain.TB_EVENT_MAIN">
		INSERT INTO 
			POLARBEAR.TB_EVENT_MAIN_D (
				GRP_CD
				, PD_CODE
				, REG_DTM
				, REGP_ID
			) VALUES (
				#{GRP_CD}
				, #{PD_CODE}
				, SYSDATE
				, #{REGP_ID}
			)
	</insert>
	
	<!-- 기획전[상품]리스트 -->
	<select id="listProduct" parameterType="mall.web.domain.TB_PDINFOXM" resultType="mall.web.domain.TB_PDINFOXM">
		   SELECT B.PD_CODE, B.PD_NAME, B.PD_BARCD
			  FROM POLARBEAR.TB_EVENT_MAIN_D A, POLARBEAR.TB_PDINFOXM B
			 WHERE A.PD_CODE = B.PD_CODE
		 	  AND A.GRP_CD = #{GRP_CD}
			 ORDER BY A.PD_CODE
	</select>
	
	<!-- 기획전[상품]삭제 -->
	<delete id="deleteProduct" parameterType="mall.web.domain.TB_EVENT_MAIN">
		 DELETE FROM POLARBEAR.TB_EVENT_MAIN_D
		 WHERE GRP_CD = #{GRP_CD}
	</delete>
	
	
	
	<!-- 기획전[상품]중복확인 START  -->
	<select id="ordrSameCnt" parameterType="mall.web.domain.TB_EVENT_MAIN" resultType="int">
		SELECT COUNT(*)
		  FROM POLARBEAR.TB_EVENT_MAIN
		  WHERE GRP_CD=#{GRP_CD}
		   AND POLARBEAR.TB_EVENT_MAIN = 'N'
	</select>
	
	<select id="grpPdCnt" parameterType="mall.web.domain.TB_PDINFOXM" resultType="int">
		SELECT COUNT(*)
		  FROM POLARBEAR.TB_EVENT_MAIN_D
		 WHERE PD_CODE = #{PD_CODE}
	</select>
	<!-- 기획전[상품]중복확인 ENT -->
	
	
	
	<!-- 선택기획전상품리스트 -->
	<select id="selectProduct"  parameterType="mall.web.domain.TB_EVENT_MAIN" resultType="mall.web.domain.TB_PDINFOXM">
		
			SELECT A.PD_CODE
				, A.SUPR_ID
				, A.PD_NAME
				, A.CAGO_ID
				, A.PD_PRICE
				, A.MEMBER_PRICE
				, A.SVMN_GUBN
				, A.SVMN_VAL
				, A.INVEN_QTY
				, A.POS_NAME
				, A.PD_BARCD
				, A.STORE_CTR
				, A.PD_STD
				, A.DTB_DLINE
				, A.MAKE_COM
				, A.ORG_CT
				, A.SALE_CON
				, A.PD_DINFO
				, A.DLVREF_GUIDE
				, A.ATFL_ID
				, A.RPIMG_SEQ
				, A.ADC1_NAME
				, A.ADC2_NAME
				, A.ADC3_NAME
				, A.ADC4_NAME
				, A.ADC5_NAME
				, A.ADC1_VAL
				, A.ADC2_VAL
				, A.ADC3_VAL
				, A.ADC4_VAL
				, A.ADC5_VAL
				, A.PD_ICON
				, A.STD_UNIT
				, A.REGP_ID
				, A.REG_DTM
				, A.MODP_ID
				, A.MOD_DTM
				, A.TAX_GUBN
				, A.DEL_YN
				, A.PD_MSTCD
				, A.OBTM
				, A.DTL_ATFL_ID
				, A.DTL_USE_YN
				, A.LINK_YN
				, A.BUNDLE_CNT
				, A.DLVR_INDI_YN
				, A.KEEP_GUBN
				, A.PACKING_GUBN
				, A.KEEP_LOCATION
				, A.LIMIT_QTY
				, A.INPUT_CNT
				, A.RETAIL_GUBN
				, A.QNT_LIMT_USE
				, A.ONDY_GUBN
				, A.RETAIL_YN
				, A.OPTION_GUBN
				, A.BOX_PDDC_GUBN
				, A.BOX_PDDC_VAL
				, A.PD_INTERFACE_YN
				, A.DLVY_GUBN
				, A.PD_IWHUPRC
				, A.PRICE_POLICY
				, A.LINK_MODP_DATE
				, A.PD_MDL
				, A.MIN_QTY
				, E.ATFL_SEQ
				, E.ATFL_ID
				, E.STFL_PATH
				, E.STFL_NAME
				, E.ORFL_NAME
				, E.FILE_EXT
				, E.FILE_SIZE
				, E.DEL_YN
				, E.REGP_ID
				, E.REG_DTM
				, E.MODP_ID
				, E.MOD_DTM
				, E.FILEPATH_FLAG
			FROM POLARBEAR.TB_PDINFOXM A 
			LEFT JOIN POLARBEAR.TB_COATFLXD E 
			ON A.ATFL_ID =E.ATFL_ID 
			 WHERE A.PD_CODE IN
			  (
				 SELECT B.PD_CODE 
				 FROM POLARBEAR.TB_EVENT_MAIN_D B 
				 JOIN POLARBEAR.TB_EVENT_MAIN C 
					 ON B.GRP_CD =C.GRP_CD 
				 WHERE C.GRP_CD=#{GRP_CD}
			 )
			AND  A.RPIMG_SEQ = E.ATFL_SEQ
	</select>
	
	<!-- 선택기획전상품수 -->
	<select id="selectCount" parameterType="mall.web.domain.TB_EVENT_MAIN" resultType="int">
	 SELECT COUNT(*)
		  FROM POLARBEAR.TB_EVENT_MAIN_D A 
		 WHERE A.GRP_CD=( 
		 		SELECT B.GRP_CD 
		 		FROM POLARBEAR.TB_EVENT_MAIN B 
		 		WHERE B.GRP_CD =#{GRP_CD}
		 )
	</select> 

	<!--기획전코드 중복체크  -->
	<select id="grpChk" parameterType="mall.web.domain.TB_EVENT_MAIN" resultType="int">
		SELECT COUNT(*) AS count
		FROM POLARBEAR.TB_EVENT_MAIN
		WHERE GRP_CD=#{GRP_CD}
	</select>
	
	<!-- 기획전상품 정렬 -->
	<select id="getOrderByList" parameterType="mall.web.domain.TB_EVENT_MAIN"  resultType="mall.web.domain.TB_PDINFOXM">
		SELECT A.PD_CODE
				, A.SUPR_ID
				, A.PD_NAME
				, A.CAGO_ID
				, A.PD_PRICE
				, A.MEMBER_PRICE
				, A.SVMN_GUBN
				, A.SVMN_VAL
				, A.INVEN_QTY
				, A.POS_NAME
				, A.PD_BARCD
				, A.STORE_CTR
				, A.PD_STD
				, A.DTB_DLINE
				, A.MAKE_COM
				, A.ORG_CT
				, A.SALE_CON
				, A.PD_DINFO
				, A.DLVREF_GUIDE
				, A.ATFL_ID
				, A.RPIMG_SEQ
				, A.ADC1_NAME
				, A.ADC2_NAME
				, A.ADC3_NAME
				, A.ADC4_NAME
				, A.ADC5_NAME
				, A.ADC1_VAL
				, A.ADC2_VAL
				, A.ADC3_VAL
				, A.ADC4_VAL
				, A.ADC5_VAL
				, A.PD_ICON
				, A.STD_UNIT
				, A.REGP_ID
				, A.REG_DTM
				, A.MODP_ID
				, A.MOD_DTM
				, A.TAX_GUBN
				, A.DEL_YN
				, A.PD_MSTCD
				, A.OBTM
				, A.DTL_ATFL_ID
				, A.DTL_USE_YN
				, A.LINK_YN
				, A.BUNDLE_CNT
				, A.DLVR_INDI_YN
				, A.KEEP_GUBN
				, A.PACKING_GUBN
				, A.KEEP_LOCATION
				, A.LIMIT_QTY
				, A.INPUT_CNT
				, A.RETAIL_GUBN
				, A.QNT_LIMT_USE
				, A.ONDY_GUBN
				, A.RETAIL_YN
				, A.OPTION_GUBN
				, A.BOX_PDDC_GUBN
				, A.BOX_PDDC_VAL
				, A.PD_INTERFACE_YN
				, A.DLVY_GUBN
				, A.PD_IWHUPRC
				, A.PRICE_POLICY
				, A.LINK_MODP_DATE
				, A.PD_MDL
				, A.MIN_QTY
				, E.ATFL_SEQ
				, E.ATFL_ID
				, E.STFL_PATH
				, E.STFL_NAME
				, E.ORFL_NAME
				, E.FILE_EXT
				, E.FILE_SIZE
				, E.DEL_YN
				, E.REGP_ID
				, E.REG_DTM
				, E.MODP_ID
				, E.MOD_DTM
				, E.FILEPATH_FLAG
				, CASE WHEN A.MEMBER_PRICE = 0 OR A.MEMBER_PRICE IS NULL THEN A.PD_PRICE 
					    ELSE A.MEMBER_PRICE 
					    END AS PD_PRICE_RESULT
		FROM POLARBEAR.TB_PDINFOXM A 
		LEFT JOIN POLARBEAR.TB_COATFLXD E 
		ON A.ATFL_ID =E.ATFL_ID 
 		WHERE A.PD_CODE IN
 		 (
	 	SELECT B.PD_CODE 
		 FROM POLARBEAR.TB_EVENT_MAIN_D B 
		 JOIN POLARBEAR.TB_EVENT_MAIN C 
			 ON B.GRP_CD =C.GRP_CD 
		 WHERE C.GRP_CD=#{GRP_CD}
 		)
		AND  A.RPIMG_SEQ = E.ATFL_SEQ
		<if test="sortGubun != null or sortGubun != ''">
			<if test='sortGubun == "PD_PRICE"'>
				<if test='sortOdr == "desc"'>
					ORDER BY PD_PRICE_RESULT DESC, A.PD_NAME ASC
				</if>	
				<if test='sortOdr == "asc"'>
					ORDER BY PD_PRICE_RESULT ASC, A.PD_NAME ASC
				</if>
				<if test='sortOdr== "PD_NAME"'>
					ORDER BY A.PD_NAME ASC, PD_PRICE ASC
				</if>
			</if>
		</if>
		<if test="sortGubun == null or sortGubun == ''">
			ORDER BY PD_PRICE_RESULT ASC, A.PD_NAME ASC
		</if>
	</select>
	
	<!-- 상품 첨부파일 리스트 -->
	<select id="selectFileList" parameterType="mall.web.domain.TB_COATFLXD" resultType="mall.web.domain.TB_COATFLXD">
		SELECT ATFL_ID, ATFL_SEQ, STFL_PATH, STFL_NAME, ORFL_NAME, FILE_EXT, FILE_SIZE, DEL_YN
		FROM MALL.TB_COATFLXD
		WHERE ATFL_ID = #{ATFL_ID}
		ORDER BY ATFL_SEQ
	</select>


	<!--전체 상품  -->
	<select id="getAllFind" parameterType="mall.web.domain.TB_EVENT_MAIN" resultType="mall.web.domain.TB_EVENT_MAIN">
	   SELECT 	  A.GRP_CD
				, A.GRP_NM
				, A.USE_YN
				, A.REG_DTM
				, A.REGP_ID
				, A.MOD_DTM
				, A.MODP_ID
				, A.START_DT
				, A.END_DT
				, A.RPIMG_SEQ
				, A.ATFL_ID 
				, A.ATFL_ID_D 
				, A.D_USE_YN
				, B.STFL_PATH
				, B.STFL_NAME
				, B.FILEPATH_FLAG
		  FROM POLARBEAR.TB_EVENT_MAIN A
		 INNER JOIN POLARBEAR.TB_COATFLXD B 
			ON A.ATFL_ID =B.ATFL_ID
			AND A.RPIMG_SEQ = B.ATFL_SEQ 
		 WHERE A.GRP_CD = #{GRP_CD}
	</select>
	
	
</mapper>



